<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layerType="hardware"
    android:focusable="false"
    android:focusableInTouchMode="false"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:strokeColor="@color/card_stroke_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- 第一行：分区名称、文件系统类型、挂载状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/partitionName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/filesystemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/mountStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="normal"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- 第二行：设备路径 -->
        <TextView
            android:id="@+id/devicePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:layout_marginBottom="8dp" />

        <!-- 进度条容器 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">

            <!-- 进度条背景 -->
            <View
                android:id="@+id/progressBackground"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/track_color" />

            <!-- 进度条前景 -->
            <View
                android:id="@+id/progressFill"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:background="@color/blue" />

        </FrameLayout>

        <!-- 第三行：空间信息和百分比 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/spaceInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/usagePercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>